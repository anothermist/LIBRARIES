char getTemperature() {
  return random(-30, 30);
}

char getHumidity() {
  return random(0, 99);
}

void setup() {
  pinMode(3, INPUT);

  oled.init(0x3c);
  oled.clear();

  delay(1000);

  splash();

  delay(8000);

  prepareDisplay();

}


void loop() {

  static long startTime = 0;
  long currentTime;


  // get current time
  currentTime = millis();

  // update if 1000ms passed
  if ((currentTime - startTime) > 1000) {
    startTime = currentTime;
    char buf[10];

    // ---
    // update temperature
    char temperature = getTemperature();

    sprintf(buf, "%+0.2hd" DEG , temperature);

    // set cursor
    oled.cursorTo(60, 5);

    // print to display
    oled.printString( buf );


    // ---
    // update humidity
    char humidity = getHumidity();

    sprintf(buf, "%0.2hd\%", humidity);

    // set cursor
    oled.cursorTo(67, 6);

    // print to display
    oled.printString( buf );



  }

  heartBeat();


}

