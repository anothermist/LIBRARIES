void heartBeat() {
  static char big = 1;
  static long startTime = 0;
  long currentTime;

  // get current time
  currentTime = millis();

  // update if 1000ms passed
  if ((currentTime - startTime) > 200) {
    startTime = currentTime;


    // ---
    big = 1 - big;
    if (big) {
      oled.drawImage( img_heart_big, 10, 5, 17, 2);
    } else {
      oled.drawImage( img_heart_small, 10, 5, 17, 2);
    }

  }
}


